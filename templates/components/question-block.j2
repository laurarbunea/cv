{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}

{% if item.api %}

	{% set item = {
		"type":"question-block",
		"theme":"enhance",
		"heading":"Still have questions",
		"data":[
			{
				"icon":"discussion-multi",
				"title":"Start a discussion",
				"description":"Ask our community of customers and professional contributors"
			},
			{
				"icon":"case-multi",
				"title":"Get in touch",
				"description":"Ask someone at Xero for extra support"
			}
		]
	} %}

{% endif %}

<!--todo link block need to add links-->
{% call components.container(theme="enhance") %}

<div class='question-block [ gutters ]'>

        {{ components.heading(level="h2", data=item.heading, class='question-block__heading u-text-center') }}

        <div class='[ grid grid--col-spacing grid--row-spacing ]'>

            {% for questions in item.data %}

                <div class='[ width-full width-1/2@medium ]'>

                    <div class='[ grid grid--col-spacing ]'>

                        <div class='[ width-1/4 ]'>
                            {{ components.icon(icon=questions.icon, size="icon--xxxl", class="question-block__icon") }}
                        </div>

                        <div class='[ width-3/4 ]'>

                            <h4 class="question-block__title">{{questions.title}}</h4>
                            <p class="question-block__description">{{questions.description}}</p>

                        </div>

                    </div>
                </div>

            {% endfor %}

        </div>

    </div>

{% endcall %}
