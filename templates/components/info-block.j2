{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}

{% if item.api %}

	{% set item = {
	    "heading":"Knows about",
	    "data": [
	        {
	            "icon":"star",
	            "title": "This is a title",
	            "description":"This is a description"
	        },
	        {
	            "statistic":"3",
	            "title": "This is a title",
	            "description":"This is a description <a href='#'>and a link</a>"
	        }
	    ]

	} %}

{% endif %}

<div class='[ grid grid--col-spacing ] component'>

	<div class='[ width-full width-1/4@medium ]'>
	</div>

	<div class='[ width-full width-3/4@medium ]'>

		{{ components.heading(level="h3", data=item.heading, class="u-text-color-grey-xdark") }}

		<div class='info-block [ grid grid--row-spacing ]'>

			{% for block in item.data %}

				<div class='[ width-1/2@medium ]'>

					{% if block.icon %}
                        <div class="info-block__item">
                            {{ components.icon(icon=block.icon, size="icon--xl", class="info-block__item--icon") }}
                        </div>
					{% elif block.statistic %}
                        <div class="info-block__item">
						    <span class="info-block__item--statistic u-font-big">{{block.statistic}}</span>
                        </div>
					{% endif %}

					<p class="info-block__title">
						{{block.title}}
					</p>

					<p class='info-block__description u-font-size-s u-text-color-muted'>
						{{block.description}}
					</p>

				</div>

			{% endfor %}

        </div>

    </div>

</div>
