{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}

{% if item.api %}

	{% set item = {
        "type": "sidebar",
        "heading": "Related answers",
        "icon": "",
	    "list": [
	        {
	          "url": "#",
	          "title": "Payroll in Xero in Australia"
	        },
	        {
	          "url": "#",
	          "title": "How superannuation in Xero Works"
	        },
	        {
