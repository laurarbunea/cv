	        },
	        {
	          "url": "#",
	          "title": "How do I change employess exitsing super fund"
	        }
        ],
        "data": [],
	} %}

{% endif %}

<div class="sidebar{% if item.class %} {{ item.class }}{% endif %}">

    {% if item.icon %}
        {{ components.icon(icon=item.icon, size="icon--xxxl") }}
    {% endif %}

	<h5 class="sidebar__heading u-text-uppercase u-text-color-muted">
		{{ item.heading }}
    </h5>

    {% if item.list %}
        <ul class="sidebar__list">
            {% for anchor in item.list %}
                <li><a href="{{anchor.url}}">{{ anchor.title }}</a></li>
            {% endfor %}
        </ul>
    {% elif children %}
        {{ children }}
    {% else %}
        {{ macros.parse_blocks(item.data) }}
    {% endif %}

</div>
