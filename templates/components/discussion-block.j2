{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}

{% if item.api %}

	{% set item = {
		"type":"discussion-block",
        "heading":"Useful answers for you",
        "load_more": false,
        "answer":[
            {
                "type":"heading-breadcrumb-text-set",
                "api":true
            },
            {
                "type":"heading-breadcrumb-text-set",
                "api":true
            },
            {
                "type":"heading-breadcrumb-text-set",
                "api":true
            },
            {
                "type":"heading-breadcrumb-text-set",
                "api":true
            }
        ]

    } %}

{% endif %}

{% call components.container() %}

    {{ components.heading(level="h2", data=item.heading, class='u-text-center') }}

    <div class='[ grid grid--center grid--col-spacing grid--row-spacing ]'>

        {% for answers in item.answer %}

            <div class='[ width-full width-1/2@small width-1/2@medium u-text-left  '>
                <div class="u-keyline--bottom">
                    {{ components.heading_breadcrumb_text_set( api=true ) }}
                </div>
            </div>

        {% endfor %}

        {% if item.load_more %}

            <div class='[ width-full ]'>
                {{ components.btn(href="/pages/discussions/", text="View More") }}
            </div>

        {% endif %}

    </div>

{% endcall %}
