{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}

{% if item.user %}
    {% set item = item.user %}
{% endif %}

{% if item.api %}

	{% set item = {
		"type":"profile",
		"name":"Laura Bunea",
		"email":"laura.r.bunea@gmail.com",
		"phone":"917 819 9345",
        "job":"Front-End Dev, kid wrangler, ping pong ninja and has a mean golf drive",
		"image":"static/images/laura.png"
	} %}

{% endif %}


	<div class='profile-block component [ grid  ]'>

		<div class='[ width-full width-1/4@medium ]'>
			{{ components.avatar(profile=item) }}
		</div>

		<div class='[ width-full width-3/4@medium ]'>

            <div class='[ grid grid--col-spacing grid--row-spacing ]'>

                <div class='[ width-3/4 ]' >

                    <h2 class="u-text-color-grey-xdark">
                        {{item.name}} {% if item.xero_partner %}<span class="u-text-color-grey-mid">| Xero Partner</span>{% endif %}
                    </h2>
                    <h4>{{item.job}} </h4>

                </div>
                

                <div class='[ width-1/2@medium ]' >
                    <p class="u-text-color-grey-xdark">
                        {{item.email}}
                    </p>
                </div>

                <div class='[ width-1/2@medium ]' >
                    <p class="u-text-color-grey-xdark">
                       {{item.phone}}
                    </p>
                </div>

            </div>

		</div>

	</div>


