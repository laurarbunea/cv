{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}


{% if item.api %}

	{% set item = {
        "type":"sub-topic",
        "heading":"GST return",
        "href":"clickme",
        "data":[
            {
              "url": "#",
              "title": "Do your GST return"
            },
            {
              "url": "#",
              "title": "Generate a provisional tax return after a GST return"
            },
            {
              "url": "#",
              "title": "Published your finalised GST return"
            }
        ]
    } %}

{% endif %}


<div class='[ grid grid--row-spacing ] component sub-topic'>

	<div class='[ width-full width-1/3@medium ]'>

		<h3>
        {% if item.href %}
            <a href='{{item.href}}' class='anchor--text'>
        {% endif %}

        {{item.heading}}

        {% if item.href %}
            </a>
        {% endif %}
    </h3>

	</div>

	<div class='[ width-full width-2/3@medium ]'>

		<ul class='u-list-unstyled'>

		    {% for anchor in item.data %}

	        <li>
                <a href="{{anchor.url}}">{{ anchor.title }}</a>
            </li>

		    {% endfor %}

		</ul>

	</div>

</div>
