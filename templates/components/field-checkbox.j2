{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}

{%- if item.api -%}

	{% set item = {
        "type": "field-checkbox",
        "label": "Invite Xero Support into your organisation",
        "help_text": "",
        "error": "",
	} %}

{%- endif -%}

<label class="form-field {% if item.error %} error{% endif %}">
    <span class="field-checkbox">
        <input type="checkbox" />
        <span class="field-checkbox__button">
            {{ components.icon(icon="check-on", class="field-checkbox--on") }}
            {{ components.icon(icon="check-off", class="field-checkbox--off") }}
        </span>

        <span class="form-field__label">
            {{ item.label }}

            {% if item.help_text %}
                <br/>
                <span class="form-field__help">{{ item.help_text }}</span>
            {% endif %}

            {% if item.error %}
                <br/>
                <span class="form-field__error">{{ item.error }}</span>
            {% endif %}
        </span>
    </span>
</label>
