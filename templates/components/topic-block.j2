{% call components.container(theme=item.theme) %}

	<div class='topic-block [ grid grid--center grid--col-spacing grid--row-spacing ] component'>

		<div class='[ width-full ]'>

			{{ components.heading(level="h2", data=item.heading, class="u-text-color-grey-xdark") }}

		</div>

	 	{% for topic in item.topics %}

	 		<div class='[ width-full width-1/2@small width-1/3@medium ] '>

				<a href='{{topic.link_href}}' class='u-font-primary u-font-medium'>{{ components.heading(level="h4", data=topic.title, class="topic-block__subheading") }}</a>

				<p class="topic-block__description u-text-color-grey-dark">{{topic.description}}</p>

	 		</div>

	 	{% endfor %}

	 	{% if item.load_more %}

		 	<div class='[ width-full ]'>

		 		{{ components.btn(href="/pages/topics/topic-page/", text="View all topics", theme='inverse') }}

		 	</div>

		 {% endif %}

	</div>

{% endcall %}
