{% extends "template.j2" %}
{% import "includes/macros.j2" as macros %}
{% import "includes/components.j2" as components %}
{% block page_class %} pattern-library {% endblock %}

{% block stylesheets %}
   <link rel="stylesheet" href="/static/css/pattern-library.css" media="all">
{% endblock %}
{% block navigation %}

<div class='[ t-inverse t-inverse--bg ] pattern-library__navigation  ' >

        <div class='[ wrapper ] '>

            <div class='[ gutters ]'>

                <div class='[ grid ]'>

                    <div class='[ width-3/10 ]'>

                        <a href="/" class="sg-text-color-highlight ">Xero CSP styleguide</a>

                    </div>

                    <div class='[ width-7/10 ]'>

                        <ul class='u-list-inline u-list-unstyled u-text-right u-font-size-small' >

                            {% for item in data %}

                                {% if not (item == "intro" or item == "components_directory") %}
                                    <li>
                                        <a class="u-text-color-white u-text-uppercase u-font-size-s" href="#{{ item }}">
                                            {{item}}
                                        </a>
                                    </li>
                                {% endif %}

                             {% endfor %}

                        </ul>

                    </div>

                </div>

            </div>

        </div>

    </div>

{% endblock %}
{% block page %}

