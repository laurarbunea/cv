<!--############### intro section ###############-->

    <div class='sg-t-primary'>

        <div class='[ wrapper ]'>

            <div class='[ section gutters ]' id='{{data.intro.slug }}' >

                <div class='[ grid ]'>

                    <div class='[ width-full width-3/4@medium ]  '>

                        <h4>Hi there,</h4>

                        <p class='u-font-size++'>
                            {{data.intro.emphasis }}
                        </p>

                        {{ macros.parse_blocks( data.intro.data ) }}

                        <p>
                            To access the pattern library's compiled CSS, go to the latest CircleCI build on <a href="https://circleci.com/gh/springload/xero-style-guide/"><code>springload/xero-style-guide</code></a> and look for the <code>style.css</code> file:
                        </p>
<pre><code>
    xero-style-guide/
    └── www/
        └── static/
            ├── css/
            │   └── styles.css <a href="https://63-104815021-gh.circle-artifacts.com/0/root/xero-style-guide/www/static/css/pattern-library.css">[example link for build #63]</a>
            ├── fonts/
            └── js/
                └── site.js
</code></pre>
                        <p>
                            The source code for the project is available on GitHub: <a href='https://github.com/springload/xero-style-guide'>https://github.com/springload/xero-style-guide</a>
                        </p>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <!--############### typography section ###############-->


    <div class='sg-t-secondary'>
        <div class='[ wrapper ]'>
            <div class='[ section gutters ] ' id='{{data.typography.slug }}' >

                <div class='[ grid section--bottom ]'>

                    <div class='[ width-full ] u-text-center section-bottom'>

                        <h2>
                            {{data.typography.title }}
                        </h2>

                        <p class='u-font-size++'>
                            {{data.typography.blurb }}
                        </p>

                    </div>

                </div>

                {% for item in data.typography.font %}

        	        <div class='[ grid  grid--col-spacing ] '>

        	            <div class='[ width-full width-1/2@medium ]'>

        	                <h3 class='{{item.class}}'>
        	                    {{item.name }}
        	                </h3>

        	                <p class='{{item.class}}'>
        	                    {{item.description }}
        	                </p>

        	            </div>

        	            <div class='[ width-full width-1/2@medium ]'>

        	                <div class='[ grid grid--col-spacing grid--row-spacing ] ' >

        	                    <!--loop over the font styles in the json file -->

        	                    {% for key in item.styles %}

        	                         <div class='[ width-full width-1/3@medium width-1/2@medium ] '>

        	                            <div class='swatch u-text-center u-font-size++ ' >

                                            <div class='swatch__top t-styleguide t-styleguide--bg u-font-{{ key }} {{item.class}}' style="font-size:2rem">
        	                                    Aa
        	                                </div>

        	                                <div class='swatch__bottom sg-t-primary u-font-{{ key }} {{item.class}}'>
        	                                    {{ key }}
        	                                </div>

        	                            </div>

        	                        </div>

        	                    {% endfor %}

        	                </div>

        	            </div>

        	        </div>

                    <hr />

                 {% endfor %}

            </div>

        </div>

    </div>


<!--############### Font sizes = ###############-->

    <div class='t-content'>

        <div class='[ wrapper ]'>

            <div class='[ section gutters ] t-content' id='{{data.font.slug }}' >

                <div class='[ grid section--bottom ]'>

                    <div class='[ width-full ] u-text-center section-bottom'>

                        <h2>
                            {{data.font.title }}
                        </h2>

                        <p class='u-font-size++'>
                            {{data.font.blurb }}
                        </p>

                    </div>

                </div>

                <div class='[ grid grid--col-spacing grid--row-spacing ]'>

                    <div class='[ width-full width-1/2@medium ]'>

                        <h4>{{data.font.headings.title }}</h4>

                        <p>{{data.font.headings.notes }}</p>

                        <div class='sg-t-secondary inset-block'>

                            {% for heading in data.font.headings.data %}
                                {{ components.heading(level=heading, data=heading+"&nbsp;heading") }}
                            {% endfor %}

                        </div>

                    </div>

                    <div class='[ width-full width-1/2@medium ]'>

                        <h4>{{data.font.body.title }}</h4>

                        <p>{{data.font.body.notes }}</p>

                        <div class='sg-t-secondary inset-block'>

                            {{ macros.parse_blocks( data.font.body.data ) }}

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>


    <!--############### Grid breakpoints section ###############-->

    <div class='t-styleguide--bg' >

        <div class='[ wrapper ]'>

            <div class='[ section gutters ]' id='{{data.breakpoints.slug }}'>

                <div class='[ grid  ]'>

                    <div class=' [ width-full ] '>

                        <div class='u-text-center section-bottom'>

                            <h2>
                                {{data.breakpoints.title }}
                            </h2>

                            <p class='u-font-size++'>
                                {{data.breakpoints.blurb }}
                            </p>

                        </div>

                        <div class='[ grid grid--col-spacing grid--row-spacing  ]'>

                            <!--loop over the grid breakpoints in the json file -->
                            {% for key in data.breakpoints.breakpoints %}

                                <div class='[ width-1/3@medium ]'>

                                    <div class='swatch u-text-center'>

                                        <div class='swatch__top sg-t-secondary breakpoint-on-{{ key.name }}' >

                                            <p>{{ key.name }}</p>

                                        </div>

                                        <div class='swatch__bottom sg-t-primary'>
                                            <p>{{ key.px }}</p>

                                        </div>

                                    </div>

                                </div>

                            {% endfor %}

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>


    <!--############### themes section ###############-->


    <div class='sg-t-secondary'>

        <div class='[ wrapper ]'>

            <div class='[ section gutters ] ' id='{{data.themes.slug }}'>

                <div class='[ grid section--bottom  ]'>

                    <div class='[ width-full ] u-text-center section-bottom'>

                        <h2>
                            {{data.themes.title }}
                        </h2>

                        <p class='u-font-size++'>
                            {{data.themes.blurb }}
                        </p>

                    </div>

                </div>

                <div class='[ grid grid--row-spacing grid--col-spacing ]'>


                    <!--loop over the theme classes documented in the json file-->

                    {% for key in data.themes.classes %}

                        <div class='[  width-1/2@medium ]'>

                            <div class='swatch u-text-center '>

                                <div class='swatch__top {{ key }} u-font-size++ t-{{ key }} t-{{ key }}--bg'>

                                    Aa <a href=''>a</a>

                                </div>

                                <div class='swatch__bottom sg-t-primary'>

                                    <p>t-{{ key }}</p>

                                </div>

                            </div>

                        </div>

                    {% endfor %}

                </div>

            </div>

        </div>

    </div>

  <!--############### Icons ###############-->

    <div class='sg-t-primary'>

        <div class='[ wrapper ]'>

            <div class='[ section gutters ]' id='{{data.icons.slug }}'>

                <div class='[ grid  ]'>

                    <div class=' [ width-full ] '>

                        <div class='u-text-center section-bottom'>

                            <h2>
                                {{data.icons.title }}
                            </h2>

                            <p class='u-font-size++'>
                                {{data.icons.blurb }}
                            </p>

                        </div>

                        <div class='[ grid grid--col-spacing grid--row-spacing  ]'>

                            {% for key in data.icons.icons %}

                                <div class='[ width-1/4 ]'>

                                    {{ components.icon(icon=key, size=data.icons.size, class=icon_color_class|default('u-current-icon')) }}

                                    <p>{{key}}</p>

                                </div>

                            {% endfor %}

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <!--############### components ###############-->

    <div class='sg-t-secondary'>

            <div class='[ wrapper ]'>

                <div class='[ section gutters ]' id='pages'>

                    <div class='[ grid ]'>

                        <div class='[ width-full ] u-text-center section-bottom'>

                            <h2>
                                {{data.pages.title }}
                            </h2>

                            <p class='u-font-size++'>
                                {{data.pages.blurb }}
                            </p>
                        </div>
                    </div>

                    <div class='[ grid grid--row-spacing grid--col-spacing ]'>
                        <div class="[ width-full ]">

                            {% for page in extensions.sitemap %}

                                {% if 'pages' in page.data.url %}
                                    <ul>
                                        {% for i in page.children|sort(attribute = 'data') %}
                                            <li>
                                                <a href='{{i.data.url}}'>{{i.data.title}}</a>
                                                <ul>
                                                    {% for ii in i.children %}
                                                        <li>
                                                            <a href='{{ii.data.url}}'>{{ii.data.title}}</a>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            {% endfor %}

                        </div>
                    </div>
                </div>

            </div>

        </div>

    <!--############### components ###############-->

    <div class='t-content'>

        <div class='[ wrapper ]'>

            <div class='[ section gutters ]' id='components'>

                <div class='[ grid ]'>

                    <div class='[ width-full ] u-text-center section-bottom'>

                        <h2>
                            {{data.components.title }}
                        </h2>

                        <p class='u-font-size++'>
                            {{data.components.blurb }}
                        </p>
                    </div>
                </div>

                <button type="button" class="btn btn--inverse btn--small" onclick="window.location.hash = '__debug__'; window.location.reload(true);">Open all components</button>

                <div class='[ grid grid--row-spacing grid--col-spacing ]'>

                    <div class="[ width-full ]">

                        {% for component in data.components_directory %}
                            {{ components.example(example=component) }}
                        {% endfor %}
                    </div>

                </div>
            </div>

        </div>

    </div>

    <div class="u-position-fixed u-align-bottom-right">
        <a class="btn btn--inverse btn--small" href="#">top</a>
    </div>

{% endblock %}
